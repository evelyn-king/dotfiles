" vimrc - Cameron King

set nocompatible

filetype plugin indent on

set backspace=indent,eol,start

syntax enable

set encoding=utf-8

set number
set nohlsearch
set incsearch
set ruler

" Default for all formatting
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

:inoremap jk <Esc>

" Lightline settings
set laststatus=2
set noshowmode
let g:lightline = {'colorscheme': "gruvbox"}

" Gruvbox theme
autocmd vimenter * ++nested colorscheme gruvbox
set background=dark
colorscheme gruvbox

