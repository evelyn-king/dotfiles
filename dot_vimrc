" .vimrc - Cameron King

" Turn off classic vi compatibility layer
set nocompatible

" Filetype and syntax detection
filetype plugin indent on
syntax enable

" Reasonable backspace settings
set backspace=indent,eol,start

" UTF-8 encoding
set encoding=utf-8

" Editor styling settings
set number
set nohlsearch
set incsearch
set ruler

" Default for all formatting
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

" Map jk to escape
:inoremap jk <Esc>

" Lightline settings
set laststatus=2
set noshowmode
let g:lightline = {'colorscheme': "nord"}

" Gruvbox theme
autocmd vimenter * ++nested colorscheme nord
set background=dark
colorscheme nord

